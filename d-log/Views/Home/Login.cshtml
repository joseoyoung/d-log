
@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login</title>

	<style>
	table {
    border-top: 1px solid;
    border-collapse: collapse;
	margin:auto;
	text-align:center;
  }
  tr, td {
    border-bottom: 1px solid;
    padding: 10px;
  }

  .cancel{
  background-color: #555555; color: gray;
  display: inline-block;
  padding: 10px 20px;
  font-size: 14px;
  cursor: pointer;
  text-align: center;
  text-decoration: none;
  outline: none;
  color: #fff;
  background-color: gray;
  border: none;
  border-radius: 15px;
  box-shadow: 0 9px #999;
}

.cancel:hover{background-color: gray}

.cancel:active{
  background-color: black;
  box-shadow: 0 5px #666;
  transform: translateY(4px);
}

.login{
background-color: #555555; color: gray;
  display: inline-block;
  padding: 10px 20px;
  font-size: 14px;
  cursor: pointer;
  text-align: center;
  text-decoration: none;
  outline: none;
  color: #fff;
  background-color: gray;
  border: none;
  border-radius: 15px;
  box-shadow: 0 9px #999;
}

.login:hover{background-color: gray}

.login:active{
  background-color: black;
  box-shadow: 0 5px #666;
  transform: translateY(4px);
}
	</style>
</head>
<body>
    @using (Html.BeginForm("Login", "Home"))
    {
	<center>
        <h2>Login</h2>
		<hr>
        <table border="1" width = 350px height = 100px align = "center" style="word-wrap:break-word; word-break:break-all;">
    <tr>
        <td>
            ID
        </td>
        <td>
            <input type="text" name="id">
        </td>
    </tr>
    <tr>
        <td>
            PW
        </td>
        <td>
            <input type="password" name="pw">
        </td>
    </tr>
    <tr>
        <td colspan="2" align="center">
            <input type="reset" id="cancel" class="cancel" value="취소"/>
            <input type="submit" id="login" class="login" value="로그인">
        </td>

    </tr>
</table>
</center>
       
    }


</body>
</html>