</head>
<body>
    @using (Html.BeginForm("Login", "Home"))
    {
        <center>
            <h2>Login</h2>
            <hr>
            <table border="1" width="300" height="100" align="center" class="basic" style="margin-bottom:10px;">
                <tr>
                    <td>
                        &nbsp;ID&nbsp;
                    </td>
                    <td class="basic">
                        <input type="text" name="id" class="t_style" size="20">
                    </td>
                </tr>
                <tr>
                    <td class="basic">
                        &nbsp;PW&nbsp;
                    </td>
                    <td>
                        <input type="password" name="pw" class="t_style" size="20">
                    </td>
                </tr>
            </table>
            <input type="submit" id="login" class="b_style" value="로그인">
            <input type="reset" id="cancel" class="b_style" value="취소">
        </center>

    }

    <br />

</body>
</html>