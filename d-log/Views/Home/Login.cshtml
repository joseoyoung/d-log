@{
    ViewBag.Title = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Login</title>

    <style>
        .basic {
            border-width: 1px;
            border-style: solid;
            border-top-color: #dfdfdf;
            border-bottom-color: #dfdfdf;
            border-right-color: #dfdfdf;
            border-left-color: #dfdfdf;
        }

        input.b_style {
            background-color: black;
            width: 70px;
            height: 30px;
            color: white;
            border: none;
            text-align: center;
            display: inline-block;
            font-size: 17px;
        }

        input.t_style {
            border: none;
            text-decoration: none;
            color: #919191;
            font-family: 'Noto Sans CJK KR';
            font-size: 15pt;
        }

            input.t_style:focus {
                border: none;
                text-decoration: none;
                color: #919191;
                font-family: 'Noto Sans CJK KR';
                font-size: 15pt;
            }

        table {
            text-decoration: none;
            color: #919191;
            font-family: 'Noto Sans CJK KR';
            font-size: 15pt;
        }

        .n_border {
            border-color: white;
            text-decoration: none;
        }
